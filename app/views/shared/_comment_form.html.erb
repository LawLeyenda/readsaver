<%= form_for Comment.new, html: {class: 'container g-z-index-1'} do |f| %>
  <div class="mb-5">
    <div class="g-mb-30 field">
      <%= f.text_area :content, class: "form-control g-bg-secondary g-brd-gray-light-v4 g-brd-primary--focus g-resize-none rounded-3 g-py-13 g-px-15", rows: "5", placeholder: "Compose new Comment..." %>
    </div>
    <div class="d-flex align-items-center">
      <%= f.submit "Hoot", class: "btn u-btn-primary g-font-weight-600 g-font-size-12 text-uppercase g-py-12 g-px-25 ml-auto", id: "hooterButton", type: "submit" %>
    </div>
  </div>
<% end %>

