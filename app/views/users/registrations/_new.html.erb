<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div id="signup">
    <div class="u-shadow-v35 g-bg-white rounded g-px-40 g-py-50">
      <div class="field">
        <div class="g-mb-20">
          <label class="g-color-text-light-v1 g-font-weight-500">Name</label>
          <div class="input-group">
                          <span class="input-group-prepend g-width-50 g-brd-secondary-light-v2 g-bg-secondary g-rounded-right-0">
                            <div class="input-group-text justify-content-center w-100 g-bg-secondary g-brd-secondary-light-v2">
                              <i class="icon-education-165 u-line-icon-pro"></i>
                            </div>
                          </span>
            <%= f.text_field :name, autocomplete: "name", placeholder: "Sean Gelb", class: "form-control g-brd-secondary-light-v2 g-bg-secondary g-bg-secondary-dark-v1--focus g-rounded-left-0 g-px-20 g-py-12" %>
          </div>
        </div>
        <div class="field">
          <div class="g-mb-20">
            <label class="g-color-text-light-v1 g-font-weight-500">Email</label>
            <div class="input-group">
                          <span class="input-group-prepend g-width-50 g-brd-secondary-light-v2 g-bg-secondary g-rounded-right-0">
                            <div class="input-group-text justify-content-center w-100 g-bg-secondary g-brd-secondary-light-v2">
                              <i class="icon-education-166 u-line-icon-pro"></i>
                            </div>
                          </span>
              <%= f.email_field :email, autocomplete: "email", placeholder: "Sean@email.com", class: "form-control g-brd-secondary-light-v2 g-bg-secondary g-bg-secondary-dark-v1--focus g-rounded-left-0 g-px-20 g-py-12" %>
            </div>
          </div>
        </div>
        <div class="g-mb-20">
          <div class="field">
            <label class="g-color-text-light-v1 g-font-weight-500">Password</label>
            <div class="input-group">
                          <span class="input-group-prepend g-width-50 g-brd-secondary-light-v2 g-bg-secondary g-rounded-right-0">
                            <div class="input-group-text justify-content-center w-100 g-bg-secondary g-brd-secondary-light-v2">
                              <i class="icon-finance-135 u-line-icon-pro"></i>
                            </div>
                          </span>
              <%= f.password_field :password, class: "form-control g-brd-secondary-light-v2 g-bg-secondary g-bg-secondary-dark-v1--focus g-rounded-left-0 g-px-20 g-py-12", placeholder: "*********" %>
            </div>
          </div>
        </div>

        <div class="g-mb-20">
          <div class="field">
            <label class="g-color-text-light-v1 g-font-weight-500">Confirm Password</label>
            <div class="input-group">
                          <span class="input-group-prepend g-width-50 g-brd-secondary-light-v2 g-bg-secondary g-rounded-right-0">
                            <div class="input-group-text justify-content-center w-100 g-bg-secondary g-brd-secondary-light-v2">
                              <!-- <i class="icon-real-estate-056 u-line-icon-pro"></i>  -->
                            </div>
                          </span>
              <%= f.password_field :password_confirmation, class: "form-control g-brd-secondary-light-v2 g-bg-secondary g-bg-secondary-dark-v1--focus g-rounded-left-0 g-px-20 g-py-12", placeholder: "*********" %>
            </div>
          </div>
        </div>

        <div class="d-flex">
          <div class="termsnConditions"> By signing in you will agree to ReadSaver's <b> Terms of Service </b>
            Service. Use is subject to but not limited to the policies and guidelines listed.
          </div>

          <%= f.submit "Sign up", class: "btn u-shadow-v33 g-color-white g-bg-primary g-bg-main--hover g-font-size-default rounded g-px-25 g-py-7 ml-auto" %>
        </div>
      </div>
    </div>
    <div class="text-center g-pt-30">
      <p class="g-color-text-light-v1 g-font-size-default mb-0">Already have an account?
        <a class="g-font-size-default" id="login-link" href="">Sign in</a></p>
    </div>
  </div>
<% end %>


