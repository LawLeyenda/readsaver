<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <li class="list-inline-item d-none d-lg-inline-block g-ml-15--lg">
    <div class="input-group">
      <%= f.email_field :email, autocomplete: "email", class: "form-control g-bg-white g-rounded-left-0 g-px-10 g-py-12", placeholder: "readsaver@email.com" %>
    </div>
  </li>
  <li class="list-inline-item d-none d-lg-inline-block ">
    <div class="input-group">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control g-bg-white g-rounded-left-0 g-px-10 g-py-12", placeholder: "*********" %>
    </div>
  </li>
  <li class="list-inline-item d-lg-inline-block">
    <div class="input-group">
    <%= f.submit "Log in", class: "btn u-shadow-v33 g-color-white g-bg-primary g-bg-main--hover g-font-size-default rounded g-px-20 g-py-5 ml-auto" %>
    </div>
  </li>
<% end %>